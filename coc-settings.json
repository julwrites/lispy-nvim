{
  # Diagnostics
  "diagnostic.displayByAle": true,
  # Python
  "python.linting.lintOnSave": true,
  # ESLint
  "eslint.enable": true,
  "eslint.autoFix": true,
  "eslint.quiet": true,
  # Elm language server
  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json]
    }
  },
  "codeLens.enable": true
}
